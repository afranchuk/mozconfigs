if [ -z $ARTIFACT_BUILD ] && [ ! -z $ANDROID_BUILD ]; then
  ANDROID_NDK_DIR=$(ls $MOZBUILD | grep '^android-ndk-')
  ac_add_options --with-android-ndk=$MOZBUILD/$ANDROID_NDK_DIR
fi

SCCACHE_PATH="$MOZBUILD/sccache/sccache"
if command -v cygpath >/dev/null; then
  SCCACHE_PATH="$(cygpath -w $SCCACHE_PATH)"
fi

if [ -z $ARTIFACT_BUILD ]; then
  if [ ! -z "$CC" ]; then
    if [ -z "$HOST_CC" ]; then
      export HOST_CC="$CC"
    fi
    if [ -z "$HOST_CXX" ]; then
      export HOST_CXX="$CXX"
    fi
  fi
  if [ -z $DISABLE_SCCACHE ]; then
    if [ -f "$SCCACHE_PATH" ]; then
      ac_add_options --with-ccache=$SCCACHE_PATH
    fi
  fi
  if [ -z $CROSS_BUILD ]; then
    if command -v mold >/dev/null; then
      ac_add_options --enable-linker=mold
    fi
  fi
fi
